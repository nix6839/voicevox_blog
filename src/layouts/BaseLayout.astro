---
import defaultThumbnailImage from '../assets/images/default-thumbnail.jpg';

interface Props {
	title: string;
	description: string;
	thumbnailImageUrl?: string;
}

const {
	title,
	description,
	thumbnailImageUrl = new URL(
		defaultThumbnailImage.src,
		import.meta.env.SITE,
	).toString(),
} = Astro.props;
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />

		<title>{title}</title>
		<meta name="description" content={description} />

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		{
			thumbnailImageUrl !== undefined && (
				<meta property="og:image" content={thumbnailImageUrl} />
			)
		}

		<meta
			name="twitter:card"
			content={thumbnailImageUrl !== undefined ?
				'summary_large_image'
			:	'summary'}
		/>
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
	</head>
	<body>
		<slot />
	</body>
</html>
